{% assign hero_full_height = false %}
{% assign hero_parallax = false %}

<style>
  .hero-slideshow.slick-slider .slick-dots li.slick-active button:before{
    background: {{ section.settings.slide_text_color }};
    border-color: transparent;
  }
  .hero-slideshow.slick-slider .slick-dots li button:before{
    background: transparent;
    border-color: {{ section.settings.slide_text_color }};
  }
</style>

{% if hero_full_height %}
{% endif %}
<div data-section-id="{{ section.id }}" data-section-type="slideshow-section" class="collection-slider">

  <!-- for desktop starts -->
  {% if section.blocks.size > 0 %}
  <div class="medium--hide small--hide hero-{{ section.id }} hero{% if hero_full_height %} hero--full-height{% endif %} hero--first" id="Hero"{% if hero_full_height %} data-fullscreen="true"{% endif %}{% if hero_parallax %}data-parallax="true"{% endif %} data-autoplay="{{ section.settings.hero_home_auto }}" data-autoplayspeed="{{ section.settings.home_hero_auto_speed }}">
    {% for block in section.blocks %}

    <div class="hero__slide slider-slide slide--{{ block.id }}{% if block.settings.image == blank %} slide--placeholder{% endif %}" data-color="{{ section.settings.slide_text_color }}" style="color: {{ section.settings.slide_text_color }};" {{ block.shopify_attributes }}>
      {% if hero_full_height %}
      {% if block.settings.image == blank %}
      <div class="placeholder-background">
        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
      {% else %}
      <noscript>
        {% if forloop.first == true %}
        <div class="hero__image-no-js"{% if block.settings.image %} style="background-image: url('{{ block.settings.image | img_url: '2048x' }}');"{% endif %}></div>
        {% endif %}
      </noscript>
      {% assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
      <img class="hero__image hero__image--{{ block.id }} lazyload fade-in{% unless forloop.first == true %} lazypreload{% endunless %}"
           {% if forloop.first == true %}
           src="{{ block.settings.image | img_url: '1350x477' }}"
           {% endif %}
           data-src="{{ img_url }}"
           data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048, 4472]"
           data-aspectratio="{{ block.settings.image.aspect_ratio }}"
           data-sizes="auto"
           data-parent-fit="cover"
           alt="{{ block.settings.image.alt | escape }}">
      {% endif %}
      {% else %}
      {% if block.settings.image != blank %}
      <noscript>
        {% if forloop.first == true %}
        <div class="hero__image-no-js"{% if block.settings.image %} style="background-image: url('{{ block.settings.image | img_url: '2048x' }}');"{% endif %}></div>
        {% endif %}
      </noscript>
      <div class="hero__image">
        {% assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <img class="hero__image lazyload fade-in"
             src="{{ block.settings.image | img_url: '1350x477' }}"
             data-src="{{ img_url }}"
             data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
             data-aspectratio="{{ block.settings.image.aspect_ratio }}"
             data-sizes="auto"
             data-parent-fit="contain"
             alt="{{ block.settings.image.alt | escape }}">
      </div>
      {% else %}
      <div class="hero__image">
        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
      {% endif %}
      {% endif %}

      {% comment %}
      Apply a color overlay on a per-slide basis.
      {% endcomment %}
      <div class="hero__text-wrap slideshow__overlay">
        <div class="hero__text-align">
          <div class="hero__text-content">
            {% unless block.settings.slide_subheading == blank %}
            <p class="hero__subtitle">
              {{ block.settings.slide_subheading | escape }}
            </p>
            {% endunless %}
            {% unless block.settings.slide_heading == blank %}
            <h2 class="h1 hero__title">
              {{ block.settings.slide_heading | escape }}
            </h2>
            {% endunless %}
            {% unless block.settings.slide_cta == blank %}
            <a href="{{ block.settings.slide_link }}" style="color: {{ section.settings.slide_button_label_color }};" class="btn hero__cta">
              {{ block.settings.slide_cta | escape }} <span class="icon icon-arrow-right" aria-hidden="true"></span>
            </a>
            {% endunless %}
          </div>
        </div>
      </div>
    </div>

    {% endfor %}
  </div>
  <!-- for desktop ends -->

  <!-- for mobile starts -->

  <div class="mobile--homepage__slider large--hide hero-{{ section.id }} hero{% if hero_full_height %} hero--full-height{% endif %} hero--first" id="Hero"{% if hero_full_height %} data-fullscreen="true"{% endif %}{% if hero_parallax %}data-parallax="true"{% endif %} data-autoplay="{{ section.settings.hero_home_auto }}" data-autoplayspeed="{{ section.settings.home_hero_auto_speed }}">
    {% for block in section.blocks %}

    <div class="hero__slide slide--{{ block.id }}{% if block.settings.mob_image == blank %} slide--placeholder{% endif %}" data-color="{{ section.settings.mob_slide_text_color }}" style="color: {{ section.settings.mob_slide_text_color }};" {{ block.shopify_attributes }}>
      {% if hero_full_height %}
      {% if block.settings.mob_image == blank %}
