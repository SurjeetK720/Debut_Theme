"label": "Shadow Heading"
},
{
"type": "checkbox",
"id": "show_insta",
"default": false,
"label": "Enable Instagram"
},
{
"id": "insta",
"type": "textarea",
"label": "Instagram Code"
},
{
"type" : "text",
"id" : "insta_link",
"label" : "Instagram hover link"
},
{
"id": "mob_insta",
"type": "textarea",
"label": "Mobile Instagram Code"
},
{
"type": "image_picker",
"id": "bg_image",
"label": "Desktop Background Image"
},
{
"type": "image_picker",
"id": "bg_image_mobile",
"label": "Mobile Background Image"
},
{
"type": "image_picker",
"id": "block_image",
"label": "Desktop Block Image"
},
{
"type": "image_picker",
"id": "block_image_mobile",
"label": "Mobile Block Image"
},
{
"type": "html",
"id": "content_area",
"label": "Custom Content",
"default": "<div><p>Some content</p></div>"
},
{
"type": "color",
"id": "color_text",
"label": "Heading color",
"default": "#333333"
}
]
}
]
}
