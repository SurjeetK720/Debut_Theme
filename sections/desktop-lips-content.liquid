<div class="lips-content grid display-table">
 <div class="grid__item one-half display-table-cell small--one-whole">
    {% if section.settings.product != blank %}
    {%- assign product = all_products[section.settings.product] -%}
    <div class="grid lips-grid-item">
      {% include 'product-grid-item-lips'%}
    </div>
    {% endif %}
  </div>
  <div class="grid__item one-half display-table-cell small--one-whole">
    {% if section.settings.heading != blank %}
    <div class="lips-heading-bk">
      {{section.settings.heading}}
    </div>
    {% endif %}

    {% if section.settings.content != blank %}
    <div class="lips-paragraph">
      <p>{{section.settings.content}}</p>
    </div>
    {% endif %}
  </div>
  
</div>
{% schema %}
{
"name": "Lips Desktop Content",
"class": "lips-content-wrapper", 
"settings": [
{
"type" : "html",
"id" : "heading",
"label" : "Enter Heading"
},
{
"type" : "textarea",
"id" : "content",
"label" : "Enter Content"
},
{
"type" : "product",
"id" : "product",
"label" : "Choose Product"
}
]
}
{% endschema %}

