{% if section.blocks.size > 0 %}
<div class="wrapper1">
  <div class="discover-section display-table">
    <div class="grid-top text-center">
      <ul class="tabs1">
        {% assign count = 0 %}
        {% for block in section.blocks %}
        {% assign blog = block.settings.article %}
        {% assign count = count | plus : 1 %}
        <li class="tab-link1">
          <a href="/blogs{{ blog.blog }}/{{ blog }}">
            <div class="overlay-content">

              {% if block.settings.blog_image != blank %}
              <img src="{{ block.settings.blog_image | img_url : 'original' }}" alt="{{ block.settings.blog_image.alt }}" />
              {% endif %}
              {% if block.settings.heading != blank %}
              <span>
                {{ block.settings.heading }}
              </span>
              {% endif %}

            </div>
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>

  </div>
</div>
{% endif %}

{% schema %}
{
"name": {
"en": "Trends - Article Section"
},
"class" : "trends--article_section",
"max_blocks": 9,
"settings":[

],
"blocks": [
{
"type": "html",
"name": {
"en": "Add Article"
},
"settings": [
{
"type": "article",
"id": "article",
"label": {
"en": "Article"
}
},
{
"type" : "text",
"id" : "heading",
"label" : "Heading"
},
{
"type" : "image_picker",
"id" : "blog_image",
"label" : "Article Image"
}
]
}
]
}
{% endschema %}
