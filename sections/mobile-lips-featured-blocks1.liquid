{% if section.blocks != blank %}
<div class="featured-blocks-wrapper">
  {% for block in section.blocks%}
  {% if block.settings.image != blank %}
  <div class="banner-wrapper">
  <img src="{{block.settings.image | img_url:'original'}}" class="banner-img"/>
  </div>
  {% endif %}
  <div class="content-wrapper">
  {% if block.settings.heading != blank %}
  <div class="lips-heading">
    {{block.settings.heading}}
  </div>
  {% endif %}
  {% if block.settings.content != blank %}
  <div class="lips-paragraph">
    <p>{{block.settings.content}}</p>
  </div>    
  {% endif %}
    {% if block.settings.collection != blank %}
    <div class="lip-collection grid">
      {% if block.settings.subheading != blank %}
      <div class="section-header text-center">
        {{block.settings.subheading}}
      </div>
      {% endif %}
      {% assign collection = collections[block.settings.collection] %}
        {% for product in collection.products %}
    	{% include 'product-grid-item-lips' %} 
      {% endfor%}
    </div>
    {% endif %}
  </div>
  {% endfor %}
</div>
{% endif %}
