             src="{{ block.settings.mob_image | img_url: '300x' }}"
             data-src="{{ img_url }}"
             data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
             data-aspectratio="{{ block.settings.mob_image.aspect_ratio }}"
             data-sizes="auto"
             data-parent-fit="contain"
             alt="{{ block.settings.mob_image.alt | escape }}">
      </div>
      {% else %}
      <div class="hero__image">
        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
      {% endif %}
      {% endif %}
      <div class="hero__text-wrap slideshow__overlay">
        <div class="hero__text-align">
          <div class="hero__text-content">
            {% unless block.settings.mob_slide_subheading == blank %}
            <p class="hero__subtitle">
              {{ block.settings.mob_slide_subheading | escape }}
            </p>
            {% endunless %}
            {% unless block.settings.mob_slide_heading == blank %}
            <h2 class="h1 hero__title">
              {{ block.settings.mob_slide_heading | escape }}
            </h2>
            {% endunless %}
            {% unless block.settings.mob_slide_cta == blank %}
            <a href="{{ block.settings.mob_slide_link }}" style="color: {{ section.settings.mob_slide_button_label_color }};" class="btn hero__cta">
              {{ block.settings.mob_slide_cta | escape }} <span class="icon icon-arrow-right" aria-hidden="true"></span>
            </a>
            {% endunless %}
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
  <!-- for mobile ends -->
  {% endif %}
</div>

