<div class="trends-content">
  {% for block in section.blocks %}
  <div class="trends__item" {{ block.shopify_attributes }}>

    {% case block.type %}
    {% when 'html' %}
    <div class="grid--full trends__item-inner small--hide medium--hide trends__item-inner--{{ block.type }}">
      {% if block.settings.enable_image1 %}
      <div class="trends--image1_section text-left grid__item one-whole">
        {% if block.settings.image1 != blank %}
        <img src="{{ block.settings.image1 | img_url : '1350x424' }}" alt="" />
        {% endif %}
        <div class="hero__text-wrap">
          <div class="hero__text-align">
            <div class="hero__text-content">
              <div class="wrapper">
                {% if block.settings.heading1 != blank %}
                <h2 class="h2">{{ block.settings.heading1 }}</h2>
                {% endif %}
                {% if block.settings.subheading1 != blank %}
                <h3 class="h3">{{ block.settings.subheading1 }}</h3>
                {% endif %}
                {% if block.settings.button_text1 != blank and block.settings.button_link1 != blank  %}
                <a href="{{ block.settings.button_link1 }}" class="btn">{{ block.settings.button_text1 }}</a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
      {% if block.settings.enable_image2 %}
      <div class="trends--image2_section text-right grid__item one-half ff">
        <div class="trends-inner">
          {% if block.settings.image2 != blank %}
          <img src="{{ block.settings.image2 | img_url : '657x429' }}" alt="" />
          {% endif %}
          <div class="hero__text-wrap"> 
            <div class="hero__text-align">
              <div class="hero__text-content">
                {% if block.settings.heading2 != blank %}
                <h2 class="h2">{{ block.settings.heading2 }}</h2>
                {% endif %}
                {% if block.settings.subheading2 != blank %}
                <h3 class="h3">{{ block.settings.subheading2 }}</h3>
                {% endif %}
                {% if block.settings.button_text2 != blank and block.settings.button_link2 != blank  %}
                <a href="{{ block.settings.button_link2 }}" class="btn">{{ block.settings.button_text2 }}</a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
    </div>
    <div class="mobile--trends trends__item-inner grid--full large--hide trends__item-inner--{{ block.type }}">
      {% if block.settings.mob_enable_image %}
      <div class="trends--image1_section text-left grid__item one-whole">
        {% if block.settings.mob_image != blank %}
        <img src="{{ block.settings.mob_image | img_url : 'original' }}" alt="" />
        {% endif %}
        <div class="mobile-abs">
          {% if block.settings.mob_heading != blank %}
          <h2 class="h2">{{ block.settings.mob_heading }}</h2>
          {% endif %}
          {% if block.settings.mob_subheading != blank %}
          <h3 class="h3">{{ block.settings.subheading2 }}</h3>
          {% endif %}
          {% if block.settings.mob_button_text != blank and block.settings.mob_button_link != blank  %}
          <a href="{{ block.settings.mob_button_link }}" class="btn">{{ block.settings.mob_button_text }}</a>
          {% endif %}
        </div>
      </div>
      {% endif %}
    </div>
    {% endcase %}
  </div>
  {% endfor %}
  {% if section.blocks.size == 0 %}
  <div class="wrapper">
    <div class="grid">
      <div class="grid__item">
        <div class="rte text-center">
          {{ 'home_page.onboarding.no_content' | t }}
        </div>
      </div>
    </div>
  </div>
  {% endif %}
</div>

