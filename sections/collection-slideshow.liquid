      {% else %}
      <noscript>
        {% if forloop.first == true %}
        <div class="hero__image-no-js"{% if block.settings.mob_image %} style="background-image: url('{{ block.settings.mob_image | img_url: '2048x' }}');"{% endif %}></div>
        {% endif %}
      </noscript>
      {% assign img_url = block.settings.mob_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
      <img class="hero__image hero__image--{{ block.id }} lazyload fade-in{% unless forloop.first == true %} lazypreload{% endunless %}"
           {% if forloop.first == true %}
           src="{{ block.settings.mob_image | img_url: '767x' }}"
           {% endif %}
           data-src="{{ img_url }}"
           data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048, 4472]"
           data-aspectratio="{{ block.settings.image.aspect_ratio }}"
           data-sizes="auto"
           data-parent-fit="cover"
           alt="{{ block.settings.mob_image.alt | escape }}">
      {% endif %}
      {% else %}
      {% if block.settings.mob_image != blank %}
      <noscript>
        {% if forloop.first == true %}
        <div class="hero__image-no-js"{% if block.settings.mob_image %} style="background-image: url('{{ block.settings.mob_image | img_url: '2048x' }}');"{% endif %}></div>
        {% endif %}
      </noscript>
      <div class="hero__image">
        {% assign img_url = block.settings.mob_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
