  {% if section.blocks.size > 0 %}
  <div class="about--section">
    {% for block in section.blocks %}
    <div class="grid--full">
      {% if block.settings.text_align == 'left' %}
      <div class="grid__item one-half medium-down--one-whole small--text-center text-center">
        {% if block.settings.shadow_text != blank %}
        <div class="about--shadow_text background_text  medium--hide small--hide">{{ block.settings.shadow_text }}</div>
        {% endif %}
        {% if block.settings.heading != blank %}
        <div class="about--heading text-center medium--hide small--hide">
          {{ block.settings.heading }}
        </div>
        {% endif %}
        {% if block.settings.content != blank %}
        <div class="about--content trends--right_image1 text-left"> 
          {{ block.settings.content }}
        </div>
        {% endif %}
      </div>
      {% endif %}
      {% if block.settings.image != blank %}
      <div class="grid__item one-half about--image  medium-down--one-whole  small--text-center">
        {% if block.settings.heading != blank %}
        <div class="about--heading text-center large--hide">
          {{ block.settings.heading }}
        </div>
        {% endif %}
        {% if block.settings.shadow_text != blank %}
        <div class="about--shadow_text background_text large--hide">{{ block.settings.shadow_text }}</div>
        {% endif %}
        <img src="{{ block.settings.image | img_url : '800x790'}}" alt="{{ block.settings.image.alt | escape }}" />
      </div>
      {% endif %}
      {% if block.settings.text_align == 'right' %}
      <div class="grid__item one-half medium-down--one-whole small--text-center  text-center">
        {% if block.settings.shadow_text != blank %}
        <div class="about--shadow_text background_text medium--hide small--hide">{{ block.settings.shadow_text }}</div>
        {% endif %}
        {% if block.settings.heading != blank %}
        <div class="about--heading text-center medium--hide small--hide">
          {{ block.settings.heading }}
        </div>
        {% endif %}
        {% if block.settings.content != blank %}
        <div class="about--content trends--right_image1 text-left">
          {{ block.settings.content }}
        </div>
        {% endif %}
      </div>
      {% endif %}
    </div>
    {% endfor %}
  </div>
  {% endif %}
  {% schema %}
  {
  "name": "About us Page",
  "settings": [],
  "blocks": [
  {
  "type":"html",
  "name": "About us Page",
  "settings": [
  {
  "type": "image_picker",
  "id": "image",
  "label": "Image"
  },
  {
  "type": "text",
  "id": "heading",
  "label": "Heading"
  },
  {
  "type": "text",
  "id": "shadow_text",
  "label": "Shadow Text"
  },
  {
  "type": "html",
  "id": "content",
  "label": "Content"
  },
  {
  "type": "select",
  "id": "text_align",
  "options": [
  { "value": "right", "label": "Right"},
  { "value": "left", "label": "Left"}
  ],
  "label": "Text Alignment"
  }
  ]
  }
  ]
  }
  {% endschema %}